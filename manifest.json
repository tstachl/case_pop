{
  "manifest_version": 2,
  
  "name": "Desk.com Case Pop",
  "version": "0.1.0",
  "description": "It makes a case pop!",
  "icons": {
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://*.desk.com/agent/case/*",
    "https://*.desk.com/agent*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Desk.com Case Pop"
  }
}